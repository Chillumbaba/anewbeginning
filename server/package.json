{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm ci && npm run build-server && npm run build-client && npm run setup-public",
    "build-server": "tsc -p tsconfig.json",
    "build-client": "cd ../client && npm ci && npm run build",
    "setup-public": "mkdir -p public && cp -r ../client/build/* public/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
